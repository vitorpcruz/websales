@model IEnumerable<WebSales.Services.DTOs.PurchaseByValidCustomerDTO>

@{
    ViewData["Title"] = "PurchasesMadebyValidCustomers";
}

<h1>Sales with registered customers</h1>
<a asp-action="Index" class="btn btn-primary">Back to List</a>

<table class="table table-hover table-striped thead-dark">
    <thead>
        <tr>
            <th>
                Id #
            </th>
            <th>
                Full Name
            </th>
            <th>
                Document
            </th>
            <th>
                Sale Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerDocument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleNumber)
            </td>
        </tr>
}
    </tbody>
</table>
