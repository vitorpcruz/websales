@model IEnumerable<WebSales.Services.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Product</a>
</p>

<table class="table table-hover table-striped thead-dark">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>Actions</th>
        </tr>
        </thea>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                        @item.Id
                </td>
                <td>
                        @item.Name
                </td>
                <td>
                        @item.Quantity
                </td>
                <td>
                    R$ @item.Price
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
            }
    </tbody>
</table>
